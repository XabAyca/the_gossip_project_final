<div class='containerfluid bg-light my-5 p-5'>
  
  <% if flash[:messages] %>
    <div class="container p-1 text-center alert  alert-danger" role="alert">
      <p>Nous n'avons pas réussi à modifier le commentaire pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='text-center pb-4'> 
    <h3>Tu peux modifier/supprimer ton commentaire ici</h3>
  </div>

  <%= form_for @comment, url: gossip_comment_path, method: :put do |f| %>

    <div class='form-group'>
      <%= f.text_area :content, value:@comment.content, autofocus: true, class:'form-control' %>
    </div>
    <br>
    <div class='form-group'>
      <button type=submit class='btn btn-success'>Valider</button>
      <a href="<%= gossip_comment_path(@comment.id) %>" class="btn btn-danger" data-confirm="êtes-vous sur?" data-method="DELETE">Supprimer</a>
    </div>

  <% end %>

</div>