<div class='container m-5 p-4'>
  <% if flash[:messages] %>
    <div class="container p-1 text-center alert  alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag url_for(action: 'create'), method: "post",class:'form_new' do %>

    <%= label_tag 'Titre du potin' %><br>
    <%= text_field_tag 'title'%>
    <br /> <br />

    <%= label_tag 'Contenu' %><br>
    <%= text_area_tag 'content'%>
    <br /> <br />

    <%= submit_tag "Créer le potin" %>

  <% end %>

  <div>
    <%= image_tag ("wife.jpeg"), class:'mt-5 rounded mx-auto d-block' %>
  </div>
</div>