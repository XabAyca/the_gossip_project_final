<!-- Nouvelle utilisateur-->

<!-- Hero-->
<div class="pt-3 mt-5 pt-3 text-center">

  <i class="fas fa-highlighter fa-5x"></i>
  <h1 class="display-5 fw-bold">G<span class='red'>o</span>ssip Pr<span class='red'>o</span>ject</h1>

  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Pour t'inscrire et cracher sur tout le monde ça se passe ici</p>
  </div>
</div>

<!-- Formulaire d'incription -->
<div class='container my-5 py-4 '>

  <!-- Message alerte -->
  <% if flash[:messages] %>

    <div class="container p-1 text-center alert  alert-danger" role="alert">

      <ul>
        <% flash[:messages].each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <!-- Formulaire-->
  <%= form_for @user do |f| %>

    <div class='form-group'>
      <label>Prén<span class='red'>o</span>m</label><br>
      <%= f.text_field :first_name, class:'form-control' %>
    </div>

    <br>

    <div class='form-group'>
      <label>N<span class='red'>o</span>m</label><br>
      <%= f.text_field :last_name, class:'form-control' %>
    </div>

    <br>

    <div class='form-group'>
      <label>Ville</label><br>
      <%= f.collection_select :city_id, @cities, :id, :name,{}, class:'form-control' %>
    </div>

    <br>

    <div class='form-group'>
      <label>Descripti<span class='red'>o</span>n</label><br>
      <%= f.text_area :description, class:'form-control' %>
    </div>

    <br>

    <div class='form-group'>
      <label>Age</label><br>
      <%= f.number_field :age, in:18..99, class:'form-control' %>
    </div>

    <br>   

    <div class='form-group'>
      <label>Email</label><br>
      <%= f.email_field :email, class:'form-control' %>
    </div>

    <br> 

    <div class='form-group'>
      <label>M<span class='red'>o</span>t de passe</label><br>
      <%= f.password_field :password, class:'form-control' %>
    </div>

    <br>

    <div class='form-group'>
      <label>M<span class='red'>o</span>t de passe</label><br>
      <%= f.password_field :password_confirmation, class:'form-control' %>
    </div>

    <br> 
                        
    <div class='form-group'>
      <button type=submit class='btn btn-success'>S'inscrire</button>
    </div>

  <% end %>
</div>