<!-- Page utilisateur-->
<div class='containerfluid'>

  <div class='text-center pt-5'>
    <h3 class='m-3'>Fiche de l'auteur</h3>
  </div>

  <!-- Carte utilisateur-->
  <div class=' bg-light g-0 row align-self-center p-5'>
    <div class='container bg-light p-2 row g-0 d-flex justify-content-around align-items-center'>

      <i class=" col text-center fas fa-user-tag fa-10x"></i>

      <div class='show_content col container border border-warning rounded-3 border-5 mt-1 p-5 '>
        <p>N<span class='red'>o</span>m :       <%=@user.last_name%></p>
        <p>Pr√©n<span class='red'>o</span>m :    <%=@user.first_name%></p>
        <p>Email :        <%=@user.email%></p>
        <p>Age :        <%=@user.age%></p>
        <p>Ville :        <%=@user.city.name%></p>
        <p>Descripti<span class='red'>o</span>n : <%=@user.description%></p>
        <a href=<%=city_path(@user.city.id)%>><button type="button"class="btn btn-secondary btn-lg px-4 me-sm-3 my-3">La ville</button></a>

      </div>
    </div>
  </div>

  <!-- Potins de l'utilisateur-->
  <div class='containerfluid bg-secondary px-5 pt-3 pb-5 row g-0 d-flex justify-content-evenly'>

    <h3 class='m-3 text-center'> Tous les P<span class='red'>o</span>tins de <%=@user.first_name%> <%=@user.last_name%></h3>

    <%@user.gossips.each do |gossip|%>

      <div class="card m-3" style="width: 18rem;">

        <i class="far fa-newspaper fa-3x text-center mt-2"></i>

        <div class="card-body ">
          <h5 class="card-title"><%=gossip.title%></h5>
          <h6 class='text-secondary'><span class='red'>Auteur </span><%=gossip.user.first_name%> <%=gossip.user.last_name%></h6>
          <p class='comment'>Commentaire(s) <%=gossip.comments.size%></p>
          <hr class='border border-1 border-danger'>
        </div>

        <div class=''>
          <a href=<%= gossip_path(gossip.id)%> class="position-absolute bottom-0 end-50 my-2 btn btn-warning">Voir le potin</a>
        </div>

      </div>
    <%end%>
  </div>
</div>